<div class="container">
  <h2>Profile Page</h2>
  <br\>
  <div class="col-md-4">
    <%= image_tag @user.avatar.url(:medium) %>
  </div>
  <div class="col-md-8">
    <p>Username : <%= @user.username %></p>
    <p>Email address : <%= @user.email %></p>
    </div>
  <div class="col-md-10">
    <h3><%= @user.username %>'s reviews</h3>
    <% if @user.reviews.blank? %>
    <p><%= @user.username %> has not written any reviews yet.</p>  
    <% else %>
    <% @user.reviews.each do |review| %>
          <h3><%= link_to review.title, review_path(review) %></h3>
          <p><%= daymonthyear(review.created_at) %></p>
          <p>By <%= link_to review.user.username, user_path(review.user) %>
          Cost : $<%= review.cost %></p>
          <% if !review.photos.blank? %>
          <p><%= image_tag review.photos.url(:medium) %></p>
          <% end %>

          <%= review.body %>
    <% end %>
    <% end %>
    </div>
</div>

  