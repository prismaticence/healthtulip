<h2>Register</h2>

<%= render '/shared/errors', obj: @user %>

<%= form_for @user do |f| %>
	<div class="control-group">
		<%= f.label :username, "Choose a Username" %>
		<%= f.text_field :username %>
	</div>

	<div class="control-group">
		<%= f.label :password, "Create Password" %>
		<%= f.password_field :password %>
	</div>

	<div class="control-group">
		<%= f.label :email, "Email address" %>
		<%= f.text_field :email %>
	</div>
	<%= f.submit "Register" %>
<% end %>